<?xml version="1.0" encoding="UTF-8"?>
<p:beans default-autowire="byType" xmlns:p="http://www.springframework.org/schema/beans"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:ctx="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/tx spring-tx-3.2.xsd http://www.springframework.org/schema/context spring-context-3.2.xsd http://www.springframework.org/schema/beans spring-beans-3.2.xsd ">

	<p:bean class="spring.files.CustomerHibernateDAOImpl"></p:bean>
	<p:bean class="spring.files.CustomerServiceImpl"></p:bean>
	<p:bean class="spring.files.OrderHibernateDAOImpl"></p:bean>
	<p:bean class="spring.files.ItemHibernateDAOImpl"></p:bean>
	<!-- <p:bean class="spring.files.OrderItemsHibernateDAOImpl"></p:bean> -->

	<p:bean autowire="no"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<p:property name="annotatedClasses">
			<p:list>
				<p:value>spring.files.Customer</p:value>
				<p:value>spring.files.Order</p:value>
				<p:value>spring.files.Item</p:value>
				<!-- <p:value>spring.files.OrderItems</p:value> -->
			</p:list>
		</p:property>
		<p:property name="dataSource" ref="ds"></p:property>
		
		<p:property name="hibernateProperties">
			<p:props>
				<p:prop key="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</p:prop>
				<p:prop key="hibernate.hbm2ddl.auto">update</p:prop>
				<p:prop key="hibernate.show_sql">true</p:prop>
			</p:props>
		</p:property>
	</p:bean>

	
	
	 <p:bean id="tm1"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager"></p:bean>

	<tx:annotation-driven transaction-manager="tm1" />

	<p:import resource="classpath:jdbc.xml" />


</p:beans>
